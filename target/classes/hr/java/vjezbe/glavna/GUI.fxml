                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPrikazPoslovnihKorisnika" text="Pretraga" />
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaUnosPoslovnihKorisnika" text="Unos" />
                     </items>
                  </Menu>
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Prodaja">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPretraguProdaje" text="Pretraga" />
