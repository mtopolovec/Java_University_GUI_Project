        </rowConstraints>
      </GridPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Artikli">
            <items>
                  <Menu mnemonicParsing="false" text="Automobili">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPrikazAutomobila" text="Pretraga" />
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaUnosAutomobila" text="Unos" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" onAction="#prikaziEkranZaPrikazStanova" text="Stanovi">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPrikazStanova" text="Pretraga" />
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaUnosStanova" text="Unos" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Usluge">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPrikazUsluga" text="Pretraga" />
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaUnosUsluga" text="Unos" />
                     </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Korisnici">
            <items>
                  <Menu mnemonicParsing="false" text="Privatni Korisnici">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#prikaziEkranZaPrikazPrivatnihKorisnika" text="Pretraga" />
